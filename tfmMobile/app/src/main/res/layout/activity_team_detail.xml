<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.detail.TeamDetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/ivTeamDetail"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:cardCornerRadius="360dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp"
        android:layout_margin="50dp"

        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivTeamDetailImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/team"
            />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/ivBack"
        android:src="@drawable/ic_back"
        android:padding="24dp"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTitleTeamDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTeamDetail"
        style="@style/Title"
        tools:text="HOLA"
        />

    <TextView
        android:id="@+id/tvBodyTeamDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleTeamDetail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="asdofia afpsoidfk aasdfasidfj
asdfoiajsdf asdofijasf asldifjalsdifj asldifnm asdlfimn
fasdfa alsdkfmas falskdfm laksdmf"
        style="@style/Body"
        android:layout_margin="24dp"
        android:gravity="center"
        />

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/gold"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleTeamDetail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />






